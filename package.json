{
  "name": "todo-workflow-engine",
  "version": "1.0.0",
  "description": "Task management and workflow automation system",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "check:file-size": "node scripts/check-file-size.js",
    "check:circular": "madge --circular src/",
    "check:architecture": "dependency-cruiser src",
    "check:all": "npm run lint && npm run check:file-size && npm run check:circular",
    "analyze:complexity": "plato -r -d reports/complexity src/"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "madge": "^6.1.0",
    "dependency-cruiser": "^15.0.0",
    "plato": "^1.7.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0"
  }
}