{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-lines": ["warn", {
      "max": 500,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "max-lines-per-function": ["warn", {
      "max": 50,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "complexity": ["warn", 10],
    "max-depth": ["warn", 4],
    "max-params": ["warn", 4],
    "no-duplicate-imports": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "warn",
    "arrow-body-style": ["warn", "as-needed"],
    "object-shorthand": "warn",
    "prefer-template": "warn",
    "no-var": "error",
    "prefer-arrow-callback": "warn"
  }
}